# .env.example
# Copy to `.env` and fill in the placeholders for your own account.

# MongoDB connection string (replace <DB_USER> and <DB_PASSWORD> with your own Atlas user)
MONGO_URI=mongodb+srv://<DB_USER>:<DB_PASSWORD>@cluster0.x9vmavu.mongodb.net/comeunity?retryWrites=true&w=majority&appName=Cluster0

# Secret used to sign/verify JWT tokens (pick a long random string and keep it private)
JWT_SECRET=change-this-to-a-long-random-string

# Port for the backend Node/Express server
PORT=5001

# Frontend origin (URL) allowed to call the backend during development
CLIENT_ORIGIN=http://localhost:5173

# Email provider (Resend) API key — used by backend to send notifications (fill in locally)
RESEND_API_KEY=your-resend-api-key-here

# Cloudinary URL — used by backend to upload and serve event images (fill in locally)
CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>
